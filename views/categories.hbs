<div class="container mt-4">
  <h2>Manage Categories</h2>
  <a href="/categories/add" class="btn btn-success mb-3">Add New Category</a>
  
  {{#if categories}}
    <table class="table table-hover">
      <thead>
        <tr>
          <th>ID</th>
          <th>Category Name</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        {{#each categories}}
          <tr>
            <td>{{id}}</td>
            <td>{{category}}</td>
            <td>
              <a href="/categories/delete/{{id}}" class="btn btn-danger btn-sm">Delete</a>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  {{else}}
    <div class="alert alert-info">No categories found</div>
  {{/if}}
</div>
